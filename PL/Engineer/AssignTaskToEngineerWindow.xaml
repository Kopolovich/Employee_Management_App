<Window x:Class="PL.Engineer.AssignTaskToEngineerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Title="AssignTaskToEngineerWindow" Height="400" Width="400"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Label Content="Choose a task:" HorizontalAlignment="Left" Margin="164,132,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" 
                  Width="228" ItemsSource="{Binding TaskInEngineerList}" SelectedValue="{Binding CurrentTask, Mode=TwoWay}"/>
        <Button Content="Assign" HorizontalAlignment="Center" Margin="0,265,0,0" VerticalAlignment="Top" Height="26" Width="100" Click="Button_Click_AssignTaskToEngineer"/>

    </Grid>
</Window>
