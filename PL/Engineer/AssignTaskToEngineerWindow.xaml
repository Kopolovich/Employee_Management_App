<Window x:Class="PL.Engineer.AssignTaskToEngineerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Title="AssignTaskToEngineerWindow" Height="400" Width="400" Icon="/icon.png"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}" Activated="Window_Activated_Refresh">


    <Grid Background="#FF232226">
        <Label Content="Choose a task:" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" FontFamily="Cooper black" FontSize="32" Foreground="White"/>
        <ComboBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" 
                  FontFamily="Comic Sans MS" Width="228" ItemsSource="{Binding TaskInEngineerList}" SelectedValue="{Binding CurrentTask, Mode=TwoWay}" Height="36" Margin="0,109,0,0"/>
        <Button Content="Assign" HorizontalAlignment="Center" Margin="0,329,0,0" VerticalAlignment="Top" Height="26" Width="100" Click="Button_Click_AssignTaskToEngineer" Background="{StaticResource myLinearGradient}"/>

    </Grid>
</Window>
