<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF8F9F9"/>
                <GradientStop Color="#FF85BFE0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Admin" HorizontalAlignment="Left" Margin="218,243,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.862,0.517" Height="42" Width="125" FontFamily="cooper black"  BorderBrush="#FF333333" BorderThickness="2,2,2,2" Foreground="#FF333333" Click="Button_Click_ShowAdminWindow"/>
        <Button Content="Engineer" HorizontalAlignment="Left" Margin="400,243,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.862,0.517" Height="42" Width="125" FontFamily="cooper black"  BorderBrush="#FF333333" BorderThickness="2,2,2,2" Foreground="#FF333333" Click="Button_Click_ShowEngineerUserWindow"/>
        <Button Content="init DB" HorizontalAlignment="Left" Margin="134,342,0,0" VerticalAlignment="Top" Height="42" Width="126" Click="Button_Click_Init_DB" FontFamily="cooper black" BorderBrush="#FF333333" BorderThickness="2,2,2,2" Foreground="#FF333333"/>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="304,342,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.862,0.517" Height="42" Width="124" FontFamily="cooper black"  BorderBrush="#FF333333" BorderThickness="2,2,2,2" Foreground="#FF333333" Click="Button_Click_Reset_DB"/>
        <Button Content="Reset to planning stage" HorizontalAlignment="Left" Margin="472,342,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.862,0.517" Height="42" Width="200" FontFamily="cooper black"  BorderBrush="#FF333333" BorderThickness="2,2,2,2" Foreground="#FF333333"/>
    </Grid>
</Window>
